<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FirstSwitchStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FirstButtonStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_gravity">center</item>
        <item name="android:minHeight">15sp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="FirstSpinnerStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">2</item>
        <item name="android:spinnerMode">dialog</item>
    </style>

    <style name="FirstTitle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="SecondTextValue">
        <item name="android:layout_marginStart">15sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SecondMainValue" parent="SecondTextValue">
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="SecondTitle" parent="SecondMainValue">
        <item name="android:layout_marginTop">15sp</item>
        <item name="android:layout_weight">0</item>
    </style>

</resources>
